<header>
  <h2>Expenses</h2>
  <p>Some of the categories you may want to include: essential and lifestyle.</p>
</header>

<form id="add_category">
  <input type="text">
  <button type="submit">Add Category</button>
</form>

<form method="post" action="/expenses" id="save_expenses">
  <fieldset>
    <div class="category_wrapper">
      <label class="category_name">
        <h3></h3>
        <input type="text" id="category_name_1" name="category_name_1">
        <div class="actions">
          <a href="#" class="edit"><img src="/images/pen.png"></img></a>
          <a href="#" class="delete"><img src="/images/bin.png"></img></a>
        </div>
        <div class="dialog">
          <p>Are you sure you want to delete this?</p>
          <button type="button" class="confirm">Yes</button>
          <button type="button" class="cancel">No</button>
        </div>
        <div class="overlay"></div>
      </label>

      <div class="input_wrapper">
        <dl>
          <dt>
            <label for="expense_name_1">Expense</label>
          </dt>
          <dd>
            <input type="text" id="expense_name_1" name="expense_name_1" data-previous-value="">
          </dd>
          <dt>
            <label for="expense_amount_1">Amount</label>
          </dt>
          <dd>
            <input type="number" id="expense_amount_1" name="expense_amount_1" placeholder="0" min=".01" step=".01">
          </dd>
          <dt>
            <label for="expense_occurance_1">Occurance</label>
          </dt>
          <dd>
            <select id="expense_occurance_1" name="expense_occurance_1">
              <option value="daily">Daily</option>
              <option value="weekly">Weekly</option>
              <option value="fortnightly">Fortnightly</option>
              <option value="monthly">Monthly</option>
              <option value="quarterly">Quarterly</option>
              <option value="six-monthly">Every Six Months</option>
              <option value="yearly">Yearly</option>
            </select>
          </dd>
        </dl>
        <a href="#" class="delete"><img src="/images/bin.png"></img></a>
        <div class="dialog">
          <p>Are you sure you want to delete this?</p>
          <button type="button" class="confirm">Yes</button>
          <button type="button" class="cancel">No</button>
        </div>
        <div class="overlay"></div>
      </div>
      <a herf="#" class="add_input">+ Expense</a>
    </div>
  </fieldset>
  <button type="submit">Save</button>
</form>
